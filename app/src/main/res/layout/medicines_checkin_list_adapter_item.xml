<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="end">


    <ImageView
        android:visibility="gone"
        android:id="@+id/image_drawer_item"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/picasso" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_gravity="top"
            android:layout_margin="4dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <Switch
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="NO"
                android:textOn="YES"
                android:gravity="center"
                android:layout_marginRight="32dp"
                android:layout_marginEnd="32dp"
                android:text=""
                android:id="@+id/switch_question"
                android:layout_gravity="center" />
           <CheckBox
               android:id="@+id/checkbox_medicine_taken"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">
    <TextView
        android:visibility="visible"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtView_medicine_item"
        android:textAllCaps="false"
        android:textColor ="@color/primary_text"
        android:textSize= "16sp"
        android:layout_margin="4dp"
        android:text="Drawer_Item" />

    <TextView
        android:visibility="gone"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtView_medicine_time"
        android:textAllCaps="false"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        android:layout_margin="4dp"
        android:text="23/01/2015 12:00" />
        </LinearLayout>

<!--      <FrameLayout
            android:visibility="gone"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="72dp" >
        <com.gc.materialdesign.views.Switch
                android:visibility="visible"
                android:id="@+id/switchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                materialdesign:check="true" />
        </FrameLayout>-->
    </LinearLayout>
</LinearLayout>